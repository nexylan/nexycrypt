{
    "name": "nexylan/nexycrypt",
    "description": "Let's Encrypt ACME protocol PHP client",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sullivan SENECHAL",
            "email": "soullivaneuh@gmail.com"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "ext-openssl": "*",
        "guzzlehttp/guzzle": "^6.1",
        "spomky-labs/base64url": "^1.0",
        "doctrine/collections": "^1.3"
    },
    "require-dev": {
        "analogic/lescript": "^0.1.3",
        "symfony/config": "^2.8 || ^3.0",
        "symfony/dependency-injection": "^2.8 || ^3.0",
        "symfony/http-kernel": "^2.8 || ^3.0",
        "symfony/var-dumper": "^2.7 || ^3.0",
        "monolog/monolog": "^1.22"
    },
    "suggest": {
        "monolog/monolog": "A PSR-3 compatible logger",
        "psr/log": "To log ACME API requests and responses",
        "symfony/config": "For Symfony integration as a bundle",
        "symfony/http-kernel": "For Symfony integration as a bundle",
        "symfony/dependency-injection": "For Symfony integration as a bundle"
    },
    "autoload": {
        "psr-4": { "Nexy\\NexyCrypt\\": "src" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
